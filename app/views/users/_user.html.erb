<div class="row">
    <div class="col-md-3">
      <table class="table table-user">
        <h2>User info</h2>
        <thead>
          <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
          <tr>
          <% if user.id == current_user.id %>
            <th colspan="2"><button type="button" class="btn btn-block">
              <%= link_to edit_user_path(user) do %>
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <% end %>
            </button>
            </th>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>