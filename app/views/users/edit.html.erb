<h1>User info</h1>
  <%= form_for(@user, url:"/user/#{@user.id}") do |f| %>
    <% if @user.errors.any? %>
      <div class="error">
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-name"><b>Name</b></div>
      <%= f.text_field :name %>
    <div class="profile-image"><b>Image</b></div>
      <%= f.attachment_field :profile_image %>
    <div class="form-body"><b>Introduction</b></div>
      <%= f.text_area :introduction %><br>
    <div class="upload">
      <%= f.submit " Update User" %>
    </div>
  <% end %>
</main>